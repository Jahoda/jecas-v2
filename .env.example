# Admin authentication password
ADMIN_PASSWORD=admin123

# Supabase configuration (for newsletter functionality)
# Get these from: https://supabase.com/dashboard/project/_/settings/api
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_KEY=your-service-role-key-here

# Algolia search configuration
# Get these from: https://www.algolia.com/account/api-keys
PUBLIC_ALGOLIA_APP_ID=your-app-id
PUBLIC_ALGOLIA_INDEX_NAME=your-index-name
PUBLIC_ALGOLIA_SEARCH_ONLY_KEY=your-search-only-key
SECRET_ALGOLIA_ADMIN_KEY=your-admin-key

# X (Twitter) API credentials (for automated social sharing)
# Get these from: https://developer.x.com/en/portal/dashboard
# See docs/social-sharing.md for setup instructions
X_API_KEY=your-api-key
X_API_SECRET=your-api-secret
X_ACCESS_TOKEN=your-access-token
X_ACCESS_TOKEN_SECRET=your-access-token-secret

# Facebook API credentials (for automated social sharing)
# Get these from: https://developers.facebook.com/
# See docs/social-sharing.md for setup instructions
FACEBOOK_PAGE_ID=your-page-id
FACEBOOK_ACCESS_TOKEN=your-page-access-token

# GitHub API credentials (for SVG editor Git commit feature)
# Create a personal access token at: https://github.com/settings/tokens
# Required scopes: repo (for private repos) or public_repo (for public repos)
GITHUB_TOKEN=your-github-token
GITHUB_REPO=owner/repo-name
GITHUB_BRANCH=main
